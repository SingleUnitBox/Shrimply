@page "/tags/{tagName}"
@model Shrimply.Pages.TagsModel
@{
}

@if (Model.Tag != null)
{
    ViewData["Title"] = @Model.Tag.Name;
}
else
{
    ViewData["Title"] = "Tag does not exist";
}

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                @if (Model.Tag != null)
                {
                    @Model.Tag.Name
                }
            </h1>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">


            @if (Model.Shrimps != null && Model.Shrimps.Any())
            {
                @foreach (var shrimp in Model.Shrimps)
                {
                    <div class="mb-5 bg-light box-shadow">
                        <img src="@shrimp.FeaturedImageUrl" alt="@shrimp.Name" class="mb-2 d-block img-fluid" width="700" />
                        <div class="px-4 py-4">
                            <h2 class="mb-2">@shrimp.Name</h2>
                            <p>
                                Author: @shrimp.Author
                                <br />
                                Date Published: @shrimp.PublishedDate.ToShortDateString()
                            </p>
                            <a href="/shrimp/@shrimp.UrlHandle" class="btn btn-dark">Read More</a>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>Shrimps not Found.</p>
            }
        </div>
    </div>
</div>