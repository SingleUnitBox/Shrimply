@page
@model Shrimply.Pages.Admin.Shrimps.AddModel
@{
}

<div class="container mb-3">
    <h3>Add Shrimp</h3>
</div>

<div>
    <div class="container">
        <form method="post">

            <div class="mb-3">
                <label class="form-label" for="name">Name</label>
                <input type="text" class="form-control" id="name" asp-for="AddShrimpRequest.Name" />
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" id="description" asp-for="AddShrimpRequest.Description"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label" for="color">Color</label>
                <input type="text" class="form-control" id="color" asp-for="AddShrimpRequest.Color" />
            </div>

            <div class="mb-3">
                <label class="form-label" for="family">Family</label>
                <input type="text" class="form-control" id="family" asp-for="AddShrimpRequest.Family" />
            </div>

            <div class="mb-3">
                <label class="form-label" for="featuredImageUrl">Featured Image Url</label>
                <input type="text" class="form-control" id="featuredImageUrl" asp-for="AddShrimpRequest.FeaturedImageUrl" />
            </div>

            <div class="mb-3">
                <label class="form-label" for="urlHandle">Url Handle</label>
                <input type="text" class="form-control" id="urlHandle" asp-for="AddShrimpRequest.UrlHandle" />
            </div>

            <div class="mb-3">
                <label class="form-label" for="publishedDate">Published Date</label>
                <input type="date" class="form-control" id="publishedDate" asp-for="AddShrimpRequest.PublishedDate" />
            </div>

            <div class="mb-3">
                <label class="form-label" for="author">Author</label>
                <input type="text" class="form-control" id="author" asp-for="AddShrimpRequest.Author" />
            </div>

            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-inline" id="isVisible" asp-for="AddShrimpRequest.IsVisible" />
                <label class="form-check-label" for="isVisible">Is Visible?</label>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <script>
        var editor = new FroalaEditor('#description');
    </script>
}
